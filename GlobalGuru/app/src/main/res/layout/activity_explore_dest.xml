<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#33FF9EED"
    android:layout_height="match_parent"
    tools:context=".ExploreDest">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/black"
        android:gravity="center"
        android:text="Global Guru Travels"
        android:textAlignment="center"
        android:textColor="#00FFEA"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="16dp" />


    <ImageView
        android:id="@+id/image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginTop="20dp"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/asia8" />


    <TextView
        android:id="@+id/location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:text="📍 Kathmandu, Nepal"
        android:textAlignment="viewStart"
        android:textColor="#0004FF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="320dp">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Nothing much"
            android:textAlignment="center"
            android:id="@+id/paragraph"
            android:textColor="@color/black"
            android:textSize="18sp" />
    </ScrollView>

    <TextView
        android:id="@+id/textView4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/black"
        android:text="@string/explore_the_world_your_way"
        android:textAlignment="center"
        android:textColor="#00FFE5"
        android:textSize="25sp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />
</LinearLayout>